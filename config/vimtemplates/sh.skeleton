### Usage:
###   script.sh <input> <output>
###
### Options:
###   <input>   Input file to read.
###   <output>  Output file to write. Use '-' for stdout.
###   -h        Show this message.

set -Eeuo pipefail

help() {
    sed -rn 's/^### ?//;T;p' "$0"
}

if [[ $# -lt 1 ]] || [[ "$1" == "-h" ]]; then
    help
    exit 1
fi

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" >/dev/null 2>&1 && pwd )"

set -x
echo "Hello World"
