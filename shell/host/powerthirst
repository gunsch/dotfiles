# Rules for powerthirst.

# Paths/constants.
export JAVA_HOME=/usr/lib/jvm/jdk1.6.0_45
export PATH="/usr/local/google/code/depot_tools:$PATH"
export PATH="/etc/adt/sdk/platform-tools:$PATH"
export PATH="/usr/local/google/home/gunsch/bin:$PATH"
export CLANKIUM_SRC="/usr/local/google/code/clankium"
export CHROME_DEVEL_SANDBOX=/usr/local/sbin/chrome-devel-sandbox

alias cdd="/usr/local/google/pkg/ranger-1.5.5/ranger.py"

# Android location.
alias adb=/etc/adt/sdk/platform-tools/adb

# Sublime.
alias sublime="/usr/local/google/home/gunsch/Downloads/Sublime\ Text\ 2/sublime_text"
alias subl=sublime

# On startup, cd to default location
if [[ -z "$ALREADY_DID_CD_HOME" ]]; then
  export ALREADY_DID_CD_HOME=$HOME
  # can't get -o to work for some reason
  if [[ `pwd` = ${HOME%/} ]]; then
    cdc; cd unfork_m37/chromium/src/;
  fi
  if [[ `pwd` = $HOME ]]; then
    cdc; cd unfork_m37/chromium/src/;
  fi
fi


# JS shell. Find a way to generalize.
function js() {
  java -cp "/usr/local/google/home/gunsch/jar/*" org.mozilla.javascript.tools.shell.Main \
      -f /usr/local/google/home/gunsch/src/shell.js \
      -f -
}
function js_run() {
  java -cp "/usr/local/google/home/gunsch/jar/*" org.mozilla.javascript.tools.shell.Main \
      -f /usr/local/google/home/gunsch/src/shell.js \
      $@
}