# OS-specific rules.

alias ls-color="/bin/ls -G"
alias subl="/Applications/Sublime\ Text\ 2.app/Contents/SharedSupport/bin/subl"

# JAVA_HOME can be determined programmatically
export JAVA_HOME=`/usr/libexec/java_home -v 1.7`

# Virtual env!
if [[ -e /usr/local/share/python/virtualenvwrapper.sh ]]; then
  export WORKON_HOME=$HOME/.virtualenvs
  # Lazy version is much faster
  source /usr/local/share/python/virtualenvwrapper_lazy.sh
elif [[ -e /usr/local/bin/virtualenvwrapper.sh ]]; then
  export WORKON_HOME=$HOME/.virtualenvs
  # Lazy version is much faster
  source /usr/local/bin/virtualenvwrapper_lazy.sh
fi

if [[ "$ZSH_NAME" == "zsh" && -e ~/.iterm2_shell_integration.zsh ]]; then
  source /Users/jesse/.iterm2_shell_integration.zsh
fi

# Taken from https://florin.myip.org/blog/easy-multifactor-authentication-ssh-using-yubikey-neo-tokens
GPG_TTY=$(tty)
export GPG_TTY
export SSH_AUTH_SOCK=$(gpgconf --list-dirs agent-ssh-socket)
if [ -f "${HOME}/.gpg-agent-info" ]; then
    . "${HOME}/.gpg-agent-info"
    export GPG_AGENT_INFO
    export SSH_AUTH_SOCK
fi

